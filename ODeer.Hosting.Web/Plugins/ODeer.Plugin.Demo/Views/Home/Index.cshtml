@{
    Layout = Url.Content(BundleActivator.GridLayoutPageNode.Value);
    ViewBag.Title = "示例列表";
    ViewBag.GridId = "demo-entity";
    ViewBag.GridDataUrl = Url.Action("GetGridData");
    ViewBag.AddUrl = Url.Action("Add");
    ViewBag.EditUrl = Url.Action("Update");
    ViewBag.DeleteUrl = Url.Action("Delete");
}
@section customScript{
    <script type="text/javascript">
        columns = [[
                { field: "Id", title: "编号", width: 50, halign: "center", align: "right", sortable: true },
                { field: "Name", title: "名称", width: 200, sortable: true, editor: { type: "validatebox", options: { required: true, validType: "length[1,50]" } } },
                { field: "Remark", title: "备注", width: 500, sortable: true, editor: { type: "textarea", options: { validType: "length[1,500]" } } },
                { field: "CreatedTime", title: "创建时间", width: 150, sortable: true, formatter: function (value) { return $.osharp.tools.formatDate(value); } }
            ]
        ];
        multiSort = true;
        enableFilterData = true;
        filterData = [
            { field: "Id", type: "numberbox", op: ["equal", "notequal", "less", "lessorequal", "greater", "greaterorequal"] },
            { field: "Name", type: "text", op: ["equal", "notequal", "contains", "beginwith", "endwith"] },
            { field: "Remark", type: "text", op: ["equal", "notequal", "contains", "beginwith", "endwith"] },
            { field: "CreatedTime", type: "datebox", op: ["equal", "notequal", "less", "lessorequal", "greater", "greaterorequal"] }
        ];
    </script>
}